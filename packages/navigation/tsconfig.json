{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "./build",
    "rootDir": "./src",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020"
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "**/__tests__",
    "**/__mocks__",
    "**/build"
  ],
  "extends": "expo/tsconfig.base"
}
