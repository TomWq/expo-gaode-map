{
  "name": "expo-gaode-map-monorepo",
  "version": "2.2.23",
  "private": true,
  "workspaces": [
    "packages/*",
    "example"
  ],
  "description": "高德地图 Expo 模块 Monorepo 包含核心模块、搜索模块、导航模块和 Web API 模块",
  "scripts": {
    "build": "bun run build:core && bun run build:search && bun run build:navigation && bun run build:web-api",
    "build:core": "cd packages/core && expo-module build && cd plugin && tsc",
    "build:search": "cd packages/search && expo-module build",
    "build:navigation": "cd packages/navigation && expo-module build",
    "build:web-api": "cd packages/web-api && bun run build",
    "clean": "bun run clean:core && bun run clean:search && bun run clean:navigation && bun run clean:web-api",
    "clean:core": "cd packages/core && bun run clean",
    "clean:search": "cd packages/search && bun run clean",
    "clean:navigation": "cd packages/navigation && bun run clean",
    "clean:web-api": "cd packages/web-api && bun run clean",
    "lint": "bun run lint:core && bun run lint:search && bun run lint:navigation && bun run lint:web-api",
    "lint:core": "cd packages/core && bun run lint",
    "lint:search": "cd packages/search && bun run lint",
    "lint:navigation": "cd packages/navigation && bun run lint",
    "lint:web-api": "cd packages/web-api && bun run lint",
    "test": "bun run test:core && bun run test:search && bun run test:navigation && bun run test:web-api",
    "test:core": "cd packages/core && bun run test",
    "test:search": "cd packages/search && bun run test",
    "test:navigation": "cd packages/navigation && bun run test",
    "test:web-api": "cd packages/web-api && bun run test",
    "publish:core": "cd packages/core && bun publish --access public",
    "publish:search": "cd packages/search && bun publish --access public",
    "publish:navigation": "cd packages/navigation && bun publish --access public",
    "publish:web-api": "cd packages/web-api && bun publish --access public",
    "publish:core:beta": "cd packages/core && bun publish --access public --tag beta",
    "publish:search:beta": "cd packages/search && bun publish --access public --tag beta",
    "publish:navigation:beta": "cd packages/navigation && bun publish --access public --tag beta",
    "publish:web-api:beta": "cd packages/web-api && bun publish --access public --tag beta",
    "npm:login": "npm login --auth-type=web",
    "publish:interactive": "bash scripts/publish.sh",
    "version:core": "cd packages/core && bun version",
    "version:search": "cd packages/search && bun version",
    "version:navigation": "cd packages/navigation && bun version",
    "version:web-api": "cd packages/web-api && bun version",
    "version:core:beta": "cd packages/core && bun version prerelease --preid=beta --no-git-tag-version",
    "version:search:beta": "cd packages/search && bun version prerelease --preid=beta --no-git-tag-version",
    "version:navigation:beta": "cd packages/navigation && bun version prerelease --preid=beta --no-git-tag-version",
    "version:web-api:beta": "cd packages/web-api && bun version prerelease --preid=beta --no-git-tag-version",
    "android": "bun run:android",
    "ios": "bun run:ios"
  },
  "devDependencies": {
    "@types/react": "~19.1.0",
    "@types/node": "^22.18.0",
    "expo-module-scripts": "^5.0.8",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "expo": "~54.0.30",
    "react": "19.1.0",
    "react-native": "0.81.5"
  }
}
